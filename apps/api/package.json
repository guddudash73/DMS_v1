{
  "name": "@dcm/api",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "prebuild": "npm --prefix ../.. run build --workspace=@dcm/config --workspace=@dcm/types",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "typecheck": "tsc --build ../../packages/config ../../packages/types tsconfig.json",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "vitest run --reporter=default",
    "clean": "rimraf dist || rm -rf dist",
    "seed:test-users": "tsx src/scripts/seed-test-users.ts"
  },
  "dependencies": {
    "@aws-sdk/client-apigatewaymanagementapi": "^3.948.0",
    "@aws-sdk/client-dynamodb": "^3.946.0",
    "@aws-sdk/client-s3": "^3.946.0",
    "@aws-sdk/lib-dynamodb": "^3.946.0",
    "@aws-sdk/s3-request-presigner": "^3.946.0",
    "@dcm/config": "file:../../packages/config",
    "@dcm/types": "file:../../packages/types",
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "sharp": "^0.34.5",
    "uuid": "^9.0.1",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@dcm/eslint-config": "file:../../packages/eslint-config",
    "@types/aws-lambda": "^8.10.159",
    "@types/bcrypt": "^5.0.2",
    "@types/cookie-parser": "^1.4.7",
    "@types/express": "^5.0.5",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.19.1",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^9.0.8",
    "eslint": "^9.39.0",
    "supertest": "^7.1.4",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.8"
  },
  "eslintConfig": {
    "extends": [
      "@dcm/eslint-config"
    ]
  }
}
